<h2><%= @user.username %>'s Characters</h2>

<ul id="char-list">
  <% @user.characters.each do |char| %>
    <li><a href="/users/<%= @user.id %>/characters/<%= char.id %>"><%= char.name %></a> - Lv. <%= char.level %> <%= char.race.name %> <%= char.character_class %></li>
  <% end %>
</ul>

<form id="link-to-create-char" action="/users/<%= current_user.id %>/characters/new" method="GET">
  <input type="submit" value="Create a character">
</form>